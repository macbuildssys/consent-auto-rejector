{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "klaro": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#klaro"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "selector": ".cn-learn-more"
                            }
                        }
                    ]
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "foreach",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "label",
                                        "textFilter": [
                                            "Necessari"
                                        ]
                                    }
                                },
                                "selector": "li.cm-purpose"
                            },
                            "action": {
                                "type": "consent",
                                "consents": [
                                    {
                                        "matcher": {
                                            "type": "checkbox",
                                            "target": {
                                                "selector": "input[id*=purpose-item-necessari]"
                                            }
                                        },
                                        "toggleAction": {
                                            "type": "click",
                                            "target": {
                                                "selector": "input[id*=purpose-item-necessari]"
                                            }
                                        },
                                        "type": "A"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "foreach",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "label",
                                        "textFilter": [
                                            "Analitici",
                                            "Performance Optimization"
                                        ]
                                    }
                                },
                                "selector": "li.cm-purpose"
                            },
                            "action": {
                                "type": "consent",
                                "consents": [
                                    {
                                        "matcher": {
                                            "type": "checkbox",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "toggleAction": {
                                            "type": "click",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "type": "B"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "foreach",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "label",
                                        "textFilter": [
                                            "Analitici di terze parti",
                                            "Marketing"
                                        ]
                                    }
                                },
                                "selector": "li.cm-purpose"
                            },
                            "action": {
                                "type": "consent",
                                "consents": [
                                    {
                                        "matcher": {
                                            "type": "checkbox",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "toggleAction": {
                                            "type": "click",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "type": "F"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "foreach",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "label",
                                        "textFilter": [
                                            "Altri"
                                        ]
                                    }
                                },
                                "selector": "li.cm-purpose"
                            },
                            "action": {
                                "type": "consent",
                                "consents": [
                                    {
                                        "matcher": {
                                            "type": "checkbox",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "toggleAction": {
                                            "type": "click",
                                            "target": {
                                                "selector": "input"
                                            }
                                        },
                                        "type": "X"
                                    }
                                ]
                            }
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "ifcss",
                            "target": {
                                "selector": ".cm-btn-accept",
                                "textFilter": [
                                    "Accetta i selezionati",
                                    "Accept selected"
                                ]
                            },
                            "trueAction": {
                                "type": "click",
                                "target": {
                                    "selector": ".cm-btn-accept"
                                }
                            },
                            "falseAction": {
                                "type": "click",
                                "target": {
                                    "selector": ".cm-btn-accept"
                                }
                            }
                        }
                    ]
                },
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "hide",
                            "target": {
                                "selector": "#klaro"
                            }
                        }
                    ]
                },
                "name": "HIDE_CMP"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
