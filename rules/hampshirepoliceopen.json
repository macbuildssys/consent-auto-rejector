{
    "$schema": "https://raw.githubusercontent.com/macbuildssys/consent-auto-rejecter/master/rules.schema.json",
    "hampshire.policeopen": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#js-cookie-consent-banner"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#js-cookie-consent-banner",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "name": "DO_CONSENT"
            },
            {
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "ifcss",
                    "target": {
                        "selector": "#js-functional-cookie-manager"
                    },
                    "falseAction": {
                        "type": "click",
                        "target": {
                            "selector": "#cookie-close-button"
                        }
                    }
                },
                "name": "UTILITY"
            }
        ]
    }
}
