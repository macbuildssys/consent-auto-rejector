{
  "name": "consent-auto-rejector",
  "description": "Automatically rejects and removes cookie consent banners using rules",
  "version": "1.0.0",
  "manifest_version": 3,

  "author": "mac",
  "homepage_url": "https://github.com/macbuildssys/consent-auto-rejecter",

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "consent-auto-rejector",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "service.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "type": "module",
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "GDPRConfig.js",
        "ConsentEngine.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png"
  }
}
